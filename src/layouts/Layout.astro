---
interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;

import BaseHead from '../components/BaseHead.astro';

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro';

// import CookieConsentBanner from "../components/CookieConsentBanner.astro";
import OQVABadge from '../components/OQVABadge.astro';

import { SITE_TITLE, SITE_DESCRIPTION, SITE_KEYWORDS, } from "../consts";

import { slide } from 'astro:transitions';

import { ViewTransitions } from 'astro:transitions';

const slideAnimation = {
  old: {
    name: "slideOut", // same name as the keyframe in layouts/Main
    duration: "0.8s",
    easing: "ease",
    fillMode: "forwards",
  },
  new: {
    name: "slideIn",
    duration: "1s",
    easing: "ease",
    fillMode: "backwards",
  },
};

const bounce = {
  forwards: slideAnimation,
  backwards: slideAnimation,
};
---

<!doctype html>
<html lang="en">
	<ViewTransitions />
	
	<BaseHead title={title ? title : SITE_TITLE} description={description ? description : SITE_DESCRIPTION}/>
	<body>
		<Header transition:persist/>

		<main transition:animate={bounce}>
			<slot />
		</main>

		<!-- <Footer/> -->
	</body>

	<!-- <CookieConsentBanner></CookieConsentBanner> -->

	<!-- <OQVABadge/> -->
</html>

<style is:global>
	@keyframes slideOut {
		0% {
			animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
			transform: translate3d(0, 0, 0);
			opacity: 1;
		} 100% {
			animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
			transform: translate3d(-100vw, 0, 0);
			opacity: 0;
		}
	}

	@keyframes slideIn {
		0% {
			animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
			transform: translate3d(100vw, 0, 0);
		} 100% {
			animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
			transform: translate3d(0, 0, 0);
		}
	}
  </style>