---
import Layout from '../layouts/Layout.astro';

import { Image } from "astro:assets"
import Bg from "../assets/van-bgs/taste.png"

import '../styles/slide_page.css'

const anim = {
  old: {
    name: 'fadeIn',
    duration: '0.2s',
    easing: 'linear',
    fillMode: 'forwards',
  },
  new: {
    name: 'fadeOut',
    duration: '0.3s',
    easing: 'linear',
    fillMode: 'backwards',
  }
};

const myFade = {
  forwards: anim,
  backwards: anim,
};

---

<Layout title="Taste Authenticity with Broken Dreams">
	<section class="intro">
		<div class="bg_ctnr">
			<Image src={Bg} alt="" class="bg reveal_bg" />
		</div>

		<div class="base_width reveal">
			<div class="flex">
				<div class="content">
					<h1 class="reveal_steps1">Savor the Dream</h1>
	
					<p class="reveal_steps1">Find your nearest Broken Dreams van, and join us in this unique experience where every beverage comes with a dash of inspiration.</p>
				
					<a href="/contact" class="cta reveal_steps1">Contact us</a>

					<hr class="reveal_steps1">
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	
	h1 {
    	font-size: clamp(1rem,15vw,12rem);
		max-width: 75rem;
	}

</style>